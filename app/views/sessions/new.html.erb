<% if flash[:login_error] %>
  <div class='error'><%= flash[:login_error] %></div>
<% end %>

<div>
  <h1>User Login</h1>
    <%= form_for :session, url: sessions_path do |f| %>
      <p>
        <%= f.label :email %><br>
        <%= f.email_field :email %>
      </p>
      <p>
        <%= f.label :password %><br>
        <%= f.password_field :password %>
      </p>
      <p>
        <%= f.submit :Login %>
      </p>
    <% end %>
</div>
