<div class="pure-g">
  <div class="pure-u-1-3"></div>
  <div class="pure-u-1-3">
    <h1><%= current_user.username %>'s Profile</h1>


    <!-- Group stuff here? -->
    <ol class="artist-rankings">
      <% @user_artists.each do |artist| %>
        <li class="artist-row">
          <span class="artist-name"><%= artist[0] %></span>
          <span class="artist-score"><%= artist[1] %></span>
        </li>
      <% end %>
    </ol>

    <% if current_user %>
      <%= link_to 'Edit Your Profile', edit_user_path(current_user) %>
    <% end %>
  </div>
</div>
