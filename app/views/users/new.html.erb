<% if flash[:user_create_error] %>
  <div class="error"><%= flash[:user_create_error] %></div>
<% end %>
<% if flash[:user_successful_destroy] %>
  <div class="error"><%= flash[:user_successful_destroy] %></div>
<% end %>

  <h1>Register</h1>
  <%= form_for :user, url: users_path, html: { class: "pure-form pure-form-aligned"} do |f| %>

    <%= f.label :username %><br>
    <%= f.text_field :username %><br>

    <%= f.label :email %><br>
    <%= f.email_field :email %><br>

    <%= f.label :password %><br>
    <%= f.password_field :password %><br><br>

    <%= f.submit :Register, class: 'pure-button pure-button-primary' %>

  <% end %>

