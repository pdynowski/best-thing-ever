<div class="pure-g">
  <div class="pure-u-1-24"></div>
  <div class="pure-u-7-24">
    <h1><%= @group.name %></h1>
  </div>

  <div class="pure-g pure-u-1 pure-u-md-11-24">
    <div class="pure-u-1-24"></div>
    <div class="pure-u-11-24">
      <h3>Band Members:</h3>
      <% @group.users.each do |user| %>
        <%= link_to user.username, user_path(user) %><br>
      <% end %>
    </div>
  </div>

</div>

<div class="pure-g">
  <div class="pure-u-1-24">
  </div>
  <div class="pure-u-11-12 pure-u-md-1-3">
    <h2>Top 40 Artists for this Group</h2>
    <% if @group_artists.length > 0 %>
      <%= render partial: 'artists/rankings_table', locals: {artists: @group_artists} %>
    <% else %>
      <em>Your group hasn't voted on any artists yet. <a href="/">Get started now!</a></em>
    <% end %>
  </div>
  <div class="pure-g">
    <div class="pure-u-1-24 pure-u-md-1-24"></div>
    <div class="pure-u-22-24 pure-u-md-1-3">
      <h3>Last 20 votes in this group</h3>
      <table class="pure-table pure-table-horizontal">
        <tbody>
          <% @last_votes.each do |vote| %>
            <tr class="recent-vote-row">
              <td><strong><%=vote[:voter]%></strong></td>
              <td>chose</td>
              <td><strong class="group-winner-text"><%= vote[:winner_name]%></strong></td>
              <td>over</td>
              <td><strong class="group-loser-text"><%=vote[:loser_name]%></strong></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="pure-u-1-24"></div>
  </div>
  <div class="pure-u-11-12">
  <%= form_for [@group, Comment.new] do |f| %>
    <%= f.hidden_field :group_id, value: @group.id %>
    <%= f.hidden_field :user_id, value: session[:user_id] %>
    <%= f.text_area :content %><br>
    <%= f.submit %>
  <% end %>
  <br>
  <%= render @group.comments.order(created_at: :desc) %>
</div>
</div>

